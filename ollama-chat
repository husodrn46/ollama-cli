#!/bin/bash
# Ollama CLI Pro Launcher
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if command -v python3 >/dev/null 2>&1; then
  exec python3 -m ollama_cli "$@"
elif command -v python >/dev/null 2>&1; then
  exec python -m ollama_cli "$@"
else
  echo "Python bulunamadi. LÃ¼tfen Python 3 kurun." >&2
  exit 1
fi
